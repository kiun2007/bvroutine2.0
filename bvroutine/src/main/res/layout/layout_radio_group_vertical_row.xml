<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="kiun.com.bvroutine.views.section.RadioGroupRow"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <TextView
        tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
        android:id="@+id/titleTextView"
        android:textColor="#333"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <kiun.com.bvroutine.views.section.FlowRadioGroup
            android:id="@+id/flowRadioGroup"
            app:itemLayout="@layout/layout_radio_button_normal"
            app:enableFlow="true"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>