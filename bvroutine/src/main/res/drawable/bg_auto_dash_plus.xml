<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F3F6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                    android:color="#999"
                    android:dashGap="2dp"
                    android:dashWidth="4dp" />
        </shape>
    </item>

    <item android:width="2dp" android:height="12dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#999" />
        </shape>
    </item>

    <item android:width="12dp" android:height="2dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#999" />
        </shape>
    </item>
</layer-list>