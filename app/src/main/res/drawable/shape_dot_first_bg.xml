<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item android:left="@dimen/dot_line_margin_left" android:width="1dp" android:top="@dimen/dot_padding" android:bottom="@dimen/dot_padding">
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="#CDCDCD" />
        </shape>
    </item>

    <item android:left="@dimen/dot_margin_left"
        android:top="@dimen/dot_padding" android:width="@dimen/dot_width" android:height="@dimen/dot_width">
        <shape android:shape="oval" >
            <solid android:color="#6477F4" />
        </shape>
    </item>
    <item android:left="@dimen/dot_margin_left" android:gravity="bottom"
        android:width="@dimen/dot_width" android:height="@dimen/dot_width" android:bottom="@dimen/dot_padding">
        <shape android:shape="oval">
            <solid android:color="#999" />
        </shape>
    </item>
</layer-list>